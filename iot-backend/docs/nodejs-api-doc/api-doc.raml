       required: true
       example: c149b163-7ad8-4809-8010-9acab033fb95
     responses:
      200:
       body:
        application/json:
         example: |
           {
             "id": "301ff0eb-493f-49fe-8c0d-0c6785981032",
             "name": null,
             "sensorType": "ACCELERATION",
             "location": "Berlin, Mitte",
