#%RAML 0.8
title: Masterprojekt IoT
version: 1
baseUri: http://localhost:3000/iot-friss
/user:
 get:
   description: Show all registered User
   headers:
    Authorization:
     description: Basic YWRtaW46YWRtaW4=
   responses:
    200:
     body:
      application/json:
       example: |
         [
          {
           „username“:“admin“,
           „firstname“:“max“,
           „lastname“:“mustermann“,
           „roles": [
           "ROLE_USER",
           "ROLE_ADMIN"
           ],
           "sensorList": []
          }
         ]
 post:
    description: Register new User
    headers:
     Authorization:
      description: Basic YWRtaW46YWRtaW4=
     Content-Type:
      description: application/json
    body:
     application/json:
      example: |
         {
          „firstname“:“max“,
          „lastname“:“mustermann“,
          „password“:“abc123“,
          "roles": ["ROLE_USER"]
          }
    responses:
     201:
      body:
       application/json:
        example: |
         {
          "username": "max",
          "firstname": "max",
          "lastname": "mustermann",
          "roles": [
            "ROLE_USER"
          ],
          "sensorList": []
         }
 /:username:
   get:
     description: Get solo user
     headers:
      Authorization:
       description: Basic YWRtaW46YWRtaW4=
     queryParameters:
      username:
       description: Username
       type: string
       required: true
       example: max
     responses:
      200:
            body:
             application/json:
              example: |
               {
                "username": "max",
                "firstname": "max2",
                "lastname": "mustermann",
                "roles": [
                  "ROLE_USER"
                ],
                "sensorList": []
               }
   delete:
    description: Delete user
    headers:
     Authorization:
      description: Basic YWRtaW46YWRtaW4=
    queryParameters:
     username:
      description: Username
      type: string
      required: true
      example: max
    responses:
     200:
      description: User successfully deleted
   put:
    description: Update User
    headers:
     Authorization:
      description: Basic YWRtaW46YWRtaW4=
     Content-Type:
      description: application/json
    body:
     application/json:
      example: |
         {
             "firstname":"max2",
             "lastname":"mustermann",
             "password": "test123",
             "roles": ["ROLE_USER"]
         }
    queryParameters:
     username:
      description: Username
      type: string
      required: true
      example: max
    responses:
     200:
      body:
       application/json:
        example: |
         {
          "username": "max",
          "firstname": "max2",
          "lastname": "mustermann",
          "roles": [
            "ROLE_USER"
          ],
          "sensorList": []
         }
 /:username/sensor:
   put:
    description: Attach created sensors to user by username
    headers:
     Authorization:
      description: Basic YWRtaW46YWRtaW4=
     Content-Type:
      description: application/json
    body:
     application/json:
      example: |
       [
        "1ac83a2f-2e33-4538-8e60-bc457f71b89b",
        "f18de95c-e0da-498a-94b6-334c87202258",
        "2fc27103-ac8a-46f6-bae1-0a9b354ca37c"
       ]
    queryParameters:
     username:
      description: Username
      type: string
      required: true
      example: max
    responses:
     200:
      body:
       application/json:
        example: |
         {
           "username": "admin",
